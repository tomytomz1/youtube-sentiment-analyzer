---
import Layout from '../layouts/Layout.astro';

const title = "Page Not Found - YouTube Sentiment Analyzer";
const description = "The page you're looking for doesn't exist. Analyze any YouTube video for instant sentiment insights.";
const url = `${Astro.url.origin}/404`;
---

<Layout>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content="noindex, nofollow" />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:url" content={url} />
    <meta name="twitter:description" content={description} />
  </head>

  <main class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4">
    <div class="max-w-lg w-full text-center">
      <div class="bg-white rounded-2xl shadow-xl p-8 md:p-12">
        <!-- Animated 404 -->
        <div class="mb-8">
          <div class="text-8xl md:text-9xl font-bold text-gray-200 mb-4 animate-pulse">
            404
          </div>
          <div class="text-4xl mb-4">ðŸ˜•</div>
        </div>
        
        <h1 class="text-2xl md:text-3xl font-bold text-gray-800 mb-4">
          Analysis Not Found
        </h1>
        
        <p class="text-gray-600 mb-8 leading-relaxed">
          The sentiment analysis you're looking for doesn't exist or may have expired. 
          Shared results are typically available for 30 days.
        </p>
        
        <div class="space-y-4">
          <a 
            href="/" 
            class="block w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200"
          >
            Analyze a New Video
          </a>
          
          <button 
            onclick="window.history.back()" 
            class="block w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-6 rounded-lg transition-colors duration-200"
          >
            Go Back
          </button>
        </div>
        
        <div class="mt-8 pt-6 border-t border-gray-200">
          <h3 class="text-lg font-semibold text-gray-800 mb-3">
            What you can do:
          </h3>
          <ul class="text-left text-gray-600 space-y-2">
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Paste any YouTube video URL to start a new analysis</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Get instant AI-powered sentiment insights</span>
            </li>
            <li class="flex items-start">
              <svg class="w-5 h-5 text-blue-500 mr-2 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <span>Share your results with beautiful social media cards</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </main>

  <style>
    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    .bg-white {
      animation: fadeIn 0.6s ease-out;
    }
  </style>
</Layout>