---
import Layout from '../layouts/Layout.astro';

const title = "Video Sentiment Analysis - Free AI Tool to Analyze YouTube Video Sentiment";
const description = "Analyze sentiment of any YouTube video instantly with AI. Get detailed insights into viewer emotions, engagement patterns, and content performance metrics for free.";
const url = "https://www.senti-meter.com/video-sentiment-analysis";
---
<Layout>
  <head>
    <meta name="description" content={description} />
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="/logo.svg" />
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="/logo.svg" />
    <!-- Additional SEO -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Video Sentiment Analysis Tool" />
    <meta name="keywords" content="video sentiment analysis, youtube sentiment, video analytics, content sentiment, ai video analysis, youtube video metrics" />
    <link rel="canonical" href={url} />
  </head>

  <!-- Skip Link for Accessibility -->
  <a href="#video-sentiment-tool" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-blue-600 text-white px-4 py-2 rounded z-50">
    Skip to video sentiment analyzer
  </a>

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-purple-50 to-blue-100 py-16">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Video Sentiment Analysis Tool
      </h1>
      <p class="text-xl text-gray-600 mb-8 leading-relaxed max-w-3xl mx-auto">
        Unlock the emotional pulse of any YouTube video with our advanced AI-powered sentiment analysis. Discover how viewers truly feel about video content, track engagement patterns, and optimize your content strategy with data-driven insights.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#video-sentiment-tool" class="bg-purple-600 hover:bg-purple-700 text-white font-semibold py-3 px-8 rounded-lg transition-colors duration-200 focus:ring-2 focus:ring-purple-500 focus:ring-offset-2">
          Analyze Video Sentiment
        </a>
        <a href="#sentiment-insights" class="border border-purple-600 text-purple-600 hover:bg-purple-50 font-semibold py-3 px-8 rounded-lg transition-colors duration-200">
          View Sample Analysis
        </a>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="py-16 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Advanced Video Sentiment Analysis</h2>
        <p class="text-lg text-gray-600">Comprehensive insights beyond basic comment analysis</p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        <!-- Benefit 1 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 4V2a1 1 0 011-1h8a1 1 0 011 1v2m-9 0h10m-10 0a2 2 0 00-2 2v14a2 2 0 002 2h10a2 2 0 002-2V6a2 2 0 00-2-2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">Comprehensive Video Analysis</h3>
          <p class="text-gray-600">Analyze sentiment across entire video ecosystems including comments, engagement patterns, and viewer response trends.</p>
        </div>
        <!-- Benefit 2 -->
        <div class="text-center p-6">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
