---
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';
import Footer from '../components/footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>YouTube Sentiment Analyzer</title>
		
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-R3XF0RWZY3" is:inline></script>
		<script>
			// @ts-ignore
			window.dataLayer = window.dataLayer || [];
			// @ts-ignore
			function gtag(){dataLayer.push(arguments);}
			// @ts-ignore
			gtag('js', new Date());
			// @ts-ignore
			gtag('config', 'G-R3XF0RWZY3');
		</script>
		
		<!-- Allow pages to add their own head content -->
		<slot name="head" />
	</head>
	<body class="flex flex-col min-h-screen">
		<div class="flex-1">
			<slot />
		</div>
		<Footer />
		<Analytics />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		min-height: 100vh;
	}
</style>